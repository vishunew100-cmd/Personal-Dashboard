{
  "type": "object",
  "properties": {
    "identity": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "dob": { "type": "string" },
        "age": { "type": "integer" },
        "current_address": { "type": "string" },
        "aliases": { "type": "array", "items": { "type": "string" } },
        "ssn": { "type": "string" },
        "DL": { "type": "string" },
        "MMN": { "type": "string" }
      },
      "required": [
        "name", "dob", "age", "current_address",
        "aliases", "ssn", "DL", "MMN"
      ]
    },

    "username": {
      "type": "array",
      "items": { "type": "string" }
    },

    "contacts": {
      "type": "object",
      "properties": {
        "phones": { "type": "array", "items": { "type": "string" } },
        "emails": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["phones", "emails"]
    },

    "kpis": {
      "type": "object",
      "properties": {
        "open_accounts": { "type": "integer" },
        "closed_accounts": { "type": "integer" },
        "total_credit_limit": { "type": "number" },
        "current_total_balance": { "type": "number" }
      },
      "required": [
        "open_accounts",
        "closed_accounts",
        "total_credit_limit",
        "current_total_balance"
      ]
    },

    "criminal_history": {
      "type": "object",
      "properties": {
        "case_numbers": { "type": "array", "items": { "type": "string" } },
        "crime": { "type": "string" }
      },
      "required": ["case_numbers", "crime"]
    },

    "addresses_timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "place": { "type": "string" },
          "google_maps_link": { "type": "string" },
          "started": { "type": "string" },
          "left": { "type": "string" },
          "remarks": { "type": "string" }
        },
        "required": ["place", "google_maps_link", "started", "left", "remarks"]
      }
    },

    "education": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "school": { "type": "string" },
          "degree": { "type": "string" },
          "years": { "type": "string" },
          "remarks": { "type": "string" }
        },
        "required": ["school", "degree", "years", "remarks"]
      }
    },

    "jobs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "company": { "type": "string" },
          "title": { "type": "string" },
          "start": { "type": "string" },
          "end": { "type": "string" }
        },
        "required": ["company", "title", "start", "end"]
      }
    },

    "family": {
      "type": "object",
      "properties": {
        "core": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "age": { "type": "number" },
              "relation": { "type": "string" }
            },
            "required": ["name", "age", "relation"]
          }
        },
        "extended": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "age": { "type": "number" },
              "relation": { "type": "string" }
            },
            "required": ["name", "age", "relation"]
          }
        }
      },
      "required": ["core", "extended"]
    },

    "associates": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "age": { "type": "number" },
          "location": { "type": "string" }
        },
        "required": ["name", "age", "location"]
      }
    },

    "neighbors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "age": { "type": "number" },
          "address": { "type": "string" }
        },
        "required": ["name", "age", "address"]
      }
    },

    "social_profiles": {
      "type": "object",
      "properties": {
        "LinkedIn": { "type": "string" },
        "Facebook": { "type": "string" },
        "Twitter": { "type": "string" },
        "Instagram": { "type": "string" },
        "Flickr": { "type": "string" },
        "Myspace": { "type": "string" }
      },
      "required": [
        "LinkedIn",
        "Facebook",
        "Twitter",
        "Instagram",
        "Flickr",
        "Myspace"
      ]
    },

    "open_accounts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "creditor": { "type": "string" },
          "opened": { "type": "string" },
          "past_due": { "type": "number" },
          "current_balance": { "type": "number" },
          "credit_limit": { "type": "number" },
          "high_balance": { "type": "number" },
          "status": { "type": "string" },
          "last_payment": { "type": "string" },
          "updated": { "type": "string" }
        },
        "required": [
          "creditor", "opened", "past_due", "current_balance",
          "credit_limit", "high_balance", "status",
          "last_payment", "updated"
        ]
      }
    },

    "closed_accounts": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "creditor": { "type": "string" },
          "opened": { "type": "string" },
          "closed": { "type": "string" },
          "type": { "type": "string" },
          "balance": { "type": "number" },
          "credit_limit": { "type": "number" },
          "payment_status": { "type": "string" },
          "remarks": { "type": "string" },
          "loan_type": { "type": "string" },
          "original_amount": { "type": "number" }
        },
        "required": [
          "creditor", "opened", "closed", "balance",
          "credit_limit", "payment_status", "remarks"
        ]
      }
    }
  },
  "required": [
    "identity", "username", "contacts", "kpis", "criminal_history",
    "addresses_timeline", "education", "jobs",
    "family", "associates", "neighbors",
    "social_profiles", "open_accounts", "closed_accounts"
  ]
}
